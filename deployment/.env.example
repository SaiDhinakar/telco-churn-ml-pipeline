# Deployment Server Environment Configuration
# Copy this file to .env and update with your actual values

# =======================================
# External Services Configuration
# =======================================

# MLflow Tracking Server
# URL of the MLflow server (can be on a different server)
# Examples: http://192.168.1.100:5000, https://mlflow.example.com, http://mlflow-server:5000
MLFLOW_TRACKING_URI=http://localhost:5000

# Airflow Server
# Base URL for Airflow webserver and API (can be on a different server)
# Examples: http://192.168.1.101:8080, https://airflow.example.com, http://airflow-server:8080
AIRFLOW_BASE_URL=http://localhost:8080

# Airflow API Credentials
AIRFLOW_USERNAME=airflow
AIRFLOW_PASSWORD=airflow

# =======================================
# Model Configuration
# =======================================

# Model Registry Name (from MLflow)
MODEL_NAME=telco_churn_model

# Model Stage or Alias
# Options: Production, Staging, Champion, Challenger
MODEL_STAGE=Production

# Path to production config file
PROD_CONFIG_PATH=configs/prod.yml

# =======================================
# API Server Configuration
# =======================================

# API Server Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# Enable reload for development
API_RELOAD=False

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
